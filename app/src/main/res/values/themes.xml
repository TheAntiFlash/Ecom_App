<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EcomApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.EcomApp" parent="Base.Theme.EcomApp">
        <item name="colorPrimary">@color/themeRed</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
<!--
        <item name="android:windowBackground">@drawable/splash_background</item>
-->
        <item name="colorPrimary">@color/themeRed</item>
        <item name="colorPrimaryDark">@color/themeRed</item>
        <item name="colorAccent">@color/themeRed</item>
        <item name="android:statusBarColor">@color/themeRed</item>
    </style>

    <style name="Theme.EcomApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
    </style>
    <style name="Theme.EcomApp.AppBarOverlay" parent="Theme.MaterialComponents.Light.NoActionBar" />
    <style name="Theme.EcomApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>